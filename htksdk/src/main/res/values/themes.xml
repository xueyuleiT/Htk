<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Htk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryVariant">@color/light_blue_600</item>
        <item name="colorOnPrimary">@color/light_blue_600</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_600</item>
        <item name="colorSecondaryVariant">@color/light_blue_600</item>
        <item name="colorOnSecondary">@color/light_blue_600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Htk.Fullscreen" parent="Theme.Htk">
        <item name="android:actionBarStyle">@style/Widget.Theme.Htk.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ThemeOverlay.Htk.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>